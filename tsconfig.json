{
    "extends": "./node_modules/adonis-preset-ts/tsconfig",
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "build",
        "rootDir": "./",
        "sourceMap": true,
        "paths": {
            "App/*": [
                "./app/*"
            ],
            "Config/*": [
                "./config/*"
            ],
            "Contracts/*": [
                "./contracts/*"
            ],
            "Database/*": [
                "./database/*"
            ],
            "Lib/*": [
                "./lib/*"
            ]
        },
        "types": [
            "@adonisjs/core",
            "@adonisjs/repl",
            "@adonisjs/drive-s3",
            "@adonisjs/session",
            "@adonisjs/redis",
            "@adonisjs/lucid"
        ]
    }
}